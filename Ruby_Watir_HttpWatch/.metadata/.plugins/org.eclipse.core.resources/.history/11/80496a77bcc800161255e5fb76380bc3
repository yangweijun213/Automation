class Father
  def says()
    puts "I am father"
  end
  
  def fatherInfo()
    puts "father info"
  end
end

class Son < Father
  def says()
    puts "I am son."
  end
  
  def sonInfo()
    puts "son info"
  end
end

father = Father.new
son = Son.new

father.says()
father.fatherInfo()

son.says()
son.sonInfo()
son.fatherInfo()

